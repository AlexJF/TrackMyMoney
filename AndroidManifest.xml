<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.alexjf.tmm"
    android:versionCode="1"
    android:installLocation="preferExternal"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:name="TrackMyMoneyApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UserListActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/title_activity_user_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserAddActivity"
            android:label="@string/title_activity_user_add" >
        </activity>
        <activity
            android:name=".MoneyNodeListActivity"
            android:label="@string/title_activity_moneynode_list" >
        </activity>
        <activity
            android:name=".MoneyNodeAddActivity"
            android:label="@string/title_activity_moneynode_add" >
        </activity>
    </application>

</manifest>
