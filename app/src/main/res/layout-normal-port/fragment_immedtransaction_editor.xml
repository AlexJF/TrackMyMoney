<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >
    <TextView
        android:id="@+id/description_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="@string/description" />
    <EditText
        android:id="@+id/description_text"
        android:inputType="textCapSentences"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/description_label"
        android:singleLine="true" />
    <TextView
        android:id="@+id/category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/category_button"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/category_button"
        android:layout_below="@id/description_text"
        android:gravity="center_vertical"
        android:text="@string/category" />
    <net.alexjf.tmm.views.SelectorButton
        android:id="@id/category_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text"
        android:layout_toRightOf="@id/category_label"
        android:text="@string/choose" />
    <TextView
        android:id="@+id/executionDate_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/executionDate_button"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/executionDate_button"
        android:layout_below="@id/category_label"
        android:gravity="center_vertical"
        android:text="@string/executionDate" />
    <Button
        android:id="@id/executionDate_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/category_button"
        android:layout_toRightOf="@id/executionDate_label"
        android:freezesText="true" />
    <Button
        android:id="@id/executionTime_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/executionDate_button"
        android:layout_alignParentRight="true"
        android:layout_below="@id/executionDate_button"
        android:freezesText="true" />
    <TextView
        android:id="@+id/value_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/value_sign"
        android:layout_alignRight="@+id/value_text"
        android:layout_below="@id/executionTime_button"
        android:gravity="center_vertical"
        android:text="@string/value" />
    <net.alexjf.tmm.views.SignToggleButton
        android:id="@id/value_sign"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/value_text"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/value_text"
        android:layout_below="@id/value_label"
        positive="false"
        android:background="@android:color/transparent"
        android:freezesText="true"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />
    <EditText
        android:id="@id/value_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/value_label"
        android:layout_toLeftOf="@+id/currency_label"
        android:layout_toRightOf="@id/value_sign"
        android:singleLine="true" >
        <requestFocus />
    </EditText>
    <TextView
        android:id="@id/currency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/value_text"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/value_text"
        android:layout_below="@id/value_label"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" />
    <CheckBox
        android:id="@+id/transfer_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currency_label"
        android:layout_alignParentLeft="true"
        android:text="@string/transfer_check" />
    <LinearLayout
        android:id="@+id/transfer_panel"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transfer_check">
        <TextView
            android:id="@+id/transfer_moneynode_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/transfer_moneynode_button"
            android:layout_alignTop="@id/transfer_moneynode_button"
            android:gravity="center_vertical"
            android:text="@string/transfer_moneynode" />
        <net.alexjf.tmm.views.SelectorButton
            android:id="@id/transfer_moneynode_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/choose" />
    </LinearLayout>
    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transfer_panel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/add" />
</RelativeLayout>
