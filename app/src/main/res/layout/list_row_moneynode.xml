<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingTop="15dp" >
    <ImageView
        android:id="@+id/moneynode_icon"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/moneynode_name"
        android:layout_alignTop="@id/moneynode_name"
        android:scaleType="centerInside"
        android:src="@drawable/glyphish_piggy_bank" />
    <TextView
        android:id="@id/moneynode_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/moneynode_balance_value"
        android:layout_toRightOf="@id/moneynode_icon"
        android:gravity="center_vertical|left"
        android:textSize="25sp" />
    <TextView
        android:id="@id/moneynode_balance_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/moneynode_name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/moneynode_name"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" />
</RelativeLayout>
