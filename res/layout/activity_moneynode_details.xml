<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp" >
    <TextView android:id="@+id/balance_label"
            android:text="@string/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
    <TextView android:id="@+id/balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/balance_label" />
    <TextView android:id="@+id/total_transactions_label"
            android:text="@string/total_transactions"
            android:gravity="right|center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/balance_value" 
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/total_transactions_value" />
    <TextView android:id="@id/total_transactions_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    <ListView android:id="@+id/transaction_list"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_below="@id/balance_label"
            android:layout_alignParentBottom="true" />
    <TextView android:id="@+id/transaction_list_empty" 
            android:text="@string/transaction_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone" />
</RelativeLayout>
