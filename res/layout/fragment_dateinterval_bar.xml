<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/interval_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/interval_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/interval_spinner"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:text="@string/date_interval" />
    <Spinner
        android:id="@id/interval_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/interval_label"
        android:entries="@array/date_intervals" />
    <LinearLayout
        android:id="@+id/custom_selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/interval_spinner"
        android:orientation="horizontal"
        android:visibility="gone" >
        <Button
            android:id="@+id/start_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:freezesText="true"
            android:gravity="center" />
        <Button
            android:id="@+id/end_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:freezesText="true" />
    </LinearLayout>
</RelativeLayout>
