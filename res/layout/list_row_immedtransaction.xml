<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >
    <ImageView android:id="@+id/transaction_caticon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/transaction_cat"
            android:layout_alignBottom="@id/transaction_cat" 
            android:padding="3dp" />
    <TextView android:id="@id/transaction_cat" 
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/transaction_caticon" />
    <TextView android:id="@+id/transaction_value" 
            android:gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@id/transaction_cat"
            android:layout_alignBottom="@id/transaction_cat" 
            android:layout_toRightOf="@id/transaction_cat"
            android:layout_alignParentRight="true" />
</RelativeLayout>
