<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp" >
    <CheckBox android:id="@+id/share_check"
            android:text="@string/export_share_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <CheckBox android:id="@+id/dateinterval_check"
            android:text="@string/export_dateinterval_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_below="@id/share_check" />
    <LinearLayout android:id="@+id/dateinterval_dates"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateinterval_check"
        android:visibility="gone"
        android:orientation="horizontal" >
        <Button android:id="@+id/dateinterval_start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:freezesText="true" />
        <Button android:id="@+id/dateinterval_end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:freezesText="true" />
    </LinearLayout>
</RelativeLayout>
