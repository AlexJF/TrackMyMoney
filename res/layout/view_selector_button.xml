<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView android:id="@+id/selection_icon"
            android:gravity="center"
            android:scaleType="centerInside"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/selection_button"
            android:layout_alignBottom="@id/selection_button" />
    <Button android:id="@id/selection_button"
            android:text="@string/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/selection_icon" />
    <ImageView android:id="@+id/selection_error"
            android:src="@drawable/indicator_input_error"
            android:visibility="gone"
            android:gravity="center"
            android:scaleType="centerInside"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/selection_button"
            android:layout_alignTop="@id/selection_button"
            android:layout_alignBottom="@id/selection_button" />
</RelativeLayout>
